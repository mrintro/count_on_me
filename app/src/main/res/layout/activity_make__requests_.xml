<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".Make_Requests_Activity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="650dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="-263dp"
                app:srcCompat="@drawable/ex" />

            <TextView
                android:layout_width="274dp"
                android:layout_height="58dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="253dp"
                android:layout_marginEnd="70dp"
                android:gravity="center"
                android:text="Put Your Request Here"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="354dp"
                android:layout_marginEnd="189dp"

                android:text="State your Request"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/req_state"
                android:layout_width="377dp"
                android:layout_height="57dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="387dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="196dp"
                android:background="@drawable/sign"
                android:hint=""
                android:paddingLeft="18dp" />

            <TextView
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="457dp"
                android:layout_marginEnd="208dp"

                android:text="Pick Up Location"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/drop_down"
                android:layout_width="377dp"
                android:layout_height="57dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="495dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="196dp"
                android:background="@drawable/sign"
                android:hint=""
                android:paddingLeft="18dp" />

            <EditText
                android:id="@+id/pick_up"
                android:layout_width="377dp"
                android:layout_height="57dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="598dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="196dp"
                android:background="@drawable/sign"
                android:hint=""
                android:paddingLeft="18dp" />

            <TextView
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="566dp"
                android:layout_marginEnd="196dp"
                android:text="Drop Down Location"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_makereq"
                android:layout_width="312dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="41dp"
                android:layout_marginTop="698dp"
                android:layout_marginEnd="49dp"
                android:layout_marginBottom="196dp"
                android:background="@drawable/bgbutton"
                android:text="Make Request"
                android:textColor="#0F0F0F"
                android:textSize="18dp"
                android:textStyle="bold"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>