<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">




            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="829dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-260dp"
                app:srcCompat="@drawable/ex" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="240dp"
                android:layout_height="74dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="350dp"
                android:layout_marginEnd="86dp"
                android:gravity="center"
                android:text="Hash Yourself !"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/rname"
                android:layout_width="312dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="41dp"
                android:layout_marginTop="475dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="196dp"
                android:background="@drawable/sign"
                android:hint="Name"
                android:paddingLeft="18dp" />

            <EditText
                android:id="@+id/remail"
                android:layout_width="312dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="41dp"
                android:layout_marginTop="545dp"
                android:layout_marginEnd="51dp"
                android:layout_marginBottom="196dp"
                android:background="@drawable/sign"
                android:hint="E-mail"
                android:paddingLeft="18dp" />

            <EditText
                android:id="@+id/rpass"
                android:layout_width="312dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="41dp"
                android:layout_marginTop="615dp"
                android:layout_marginEnd="51dp"
                android:layout_marginBottom="196dp"
                android:background="@drawable/sign"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="18dp" />

            <EditText
                android:id="@+id/rmob"
                android:layout_width="312dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="41dp"
                android:layout_marginTop="685dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="196dp"
                android:background="@drawable/sign"
                android:hint="Mob. no"
                android:paddingLeft="18dp" />

            <Button
                android:id="@+id/rbutton"
                android:layout_width="312dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="41dp"
                android:layout_marginTop="868dp"
                android:layout_marginEnd="49dp"
                android:layout_marginBottom="196dp"
                android:background="@drawable/bgbutton"
                android:text="Register"
                android:textColor="#0F0F0F"
                android:textSize="16dp" />

            <Button
                android:id="@+id/rprofile"
                android:layout_width="312dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="41dp"
                android:layout_marginTop="764dp"
                android:layout_marginEnd="49dp"
                android:layout_marginBottom="196dp"
                android:background="@drawable/bgbutton"
                android:text="Upload photo"
                android:textColor="#0F0F0F"
                android:textSize="16dp" />


        </RelativeLayout>


    </ScrollView>




</RelativeLayout>
