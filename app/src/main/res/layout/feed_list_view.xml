<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:padding="16dp"
    android:background="@drawable/background2">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:text="Nitish"
        android:textColor="#000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/excal_name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="nitishraj2706@gmail.com"
        android:textColor="#000"
        android:textSize="12dp"
        android:textStyle="bold"
        android:id="@+id/excal_id"/>

    <TextView
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginTop="90dp"
        android:text="Request"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/excal_Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:text="Request"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginTop="135dp"
        android:text="PickUp : "
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="135dp"
        android:text="anything"
        android:textColor="#000"
        android:textSize="15dp"
        android:id="@+id/excal_pickup"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginTop="155dp"
        android:text="DropDown : "
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/excal_dropdown"
        android:layout_width="261dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="0dp"
        android:text="anything"
        android:textColor="#000"
        android:textSize="15dp" />

    <Button
        android:id="@+id/excalacc"
        android:layout_width="214dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:background="@drawable/bgbutton"
        android:text="Button" />


</RelativeLayout>